<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView android:text="在聚财盆通过以下券商开户，可免费签约投资顾问"
        android:layout_width="wrap_content"
        android:id="@+id/plain"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@drawable/haitong_shap"
        android:layout_marginTop="20dp"
        android:layout_height="180dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guquan_item"
        android:src="@drawable/xin"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/guquanlogo"
            android:src="@drawable/guquanlogo"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="fill_parent"
            android:text="海通证券"
            android:textSize="15sp"
            android:id="@+id/haitong"
            android:layout_alignTop="@+id/guquanlogo"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="免费开户，支持一人多户，尊享万3超低佣金7×24小时线上服务，视频秒接"
            android:layout_below="@+id/haitong"
            android:id="@+id/remark"
            android:layout_toRightOf="@+id/guquanlogo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_below="@+id/remark"
            android:layout_marginTop="10dp"
            android:text="立即签约"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:background="@drawable/sigin_select"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sigin" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:text="签约用户专项服务："/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:text="√ 以签约价订阅投资内参"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:text="√ 以签约价订阅投资内参"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="√ 以签约价订阅投资内参"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:text="√ 以签约价订阅投资内参"/>

</LinearLayout>
